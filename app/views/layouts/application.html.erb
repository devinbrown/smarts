<!DOCTYPE html>
<html>
<head>
  <title>DemoApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="/">5280 Learning</a>
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <div class="nav-collapse">
        <ul class="nav">
          <li class="<%= 'active' if params[:controller] == 'tutors' %>"><%= link_to "Tutors", tutors_path %></li>
          <li class="<%= 'active' if params[:controller] == 'subjects' %>"><%= link_to "Subjects", "#" %></li>
          <li class="<%= 'active' if params[:controller] == 'pricing' %>"><%= link_to "Pricing", "#" %></li>
          <li class="<%= 'active' if params[:controller] == 'contact' %>"><%= link_to "Contact Us", "#" %></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div id="wrap">
  <div id="main" class="container clear-top">
    <%= yield %>
  </div>
</div>
<footer class="footer">
  <h6>Copyright The Tudors 2013</h6>
</footer>

</body>
</html>
